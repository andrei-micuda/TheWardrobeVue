  "ReverseProxy": {
    "Routes": {
      "imageClassificationRoute": {
        "ClusterId": "imageClassificationCluster",
        "Match": {
          "Path": "/api/ClothesClassification"
        },
        "Transforms": [
          {
            "PathSet": "/predict"
          }
        ]
      },
      "itemCatalogRoute": {
        "ClusterId": "itemCatalogCluster",
        "Match": {
          "Path": "/api/ItemCatalog/{**catch-all}"
        }
      },
      "sellerItemCatalogEditRoutes": {
        "ClusterId": "itemCatalogCluster",
        "AuthorizationPolicy": "AllowEdit",
        "Match": {
          "Path": "/api/{sellerId}/ItemCatalog/{**catch-all}"
        }
      },
      "itemEditRoutes": {
        "ClusterId": "itemCatalogCluster",
        "AuthorizationPolicy": "OwnsItem",
        "Match": {
          "Path": "/api/ItemCatalog/{itemId}",
          "Methods": [
            "POST",
            "PUT",
            "DELETE"
          ]
        }
      }
    },
    "Clusters": {
      "imageClassificationCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5052/"
          }
        }
      },
      "itemCatalogCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5051/"
          }
        }
      }
    }
  }
