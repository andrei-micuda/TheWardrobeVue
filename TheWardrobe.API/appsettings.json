    }
  },
  "AllowedHosts": "*",
  "EmailTemplates": {
    "EmailVerificationTemplate": {
      "Subject": "Welcome to TheWardrobe! Don't forget to verify your account.",
      "HtmlBody": "<h1>Welcome to TheWardrobe!</h1><p>In order to verify your account, please click the verification link below:</p>"
